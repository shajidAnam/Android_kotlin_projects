<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar2"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="14dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_studentDetailsImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="W,1:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_StudentDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/iv_studentDetailsImage"
                android:drawableStart="@drawable/ic_baseline_person_24"
                tools:text="ibrahim khalil"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_studentDetailsEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_StudentDetailsName"
                app:layout_constraintTop_toBottomOf="@id/tv_StudentDetailsName"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:layout_marginTop="10dp"
                tools:text="ibrahimkhalil@gmail.com"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_studentDetailsInstitute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_StudentDetailsName"
                app:layout_constraintTop_toBottomOf="@id/tv_studentDetailsEmail"
                android:drawableStart="@drawable/ic_baseline_business_24"
                android:layout_marginTop="10dp"
                tools:text="Dhaka city college"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_studentDetailsPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_studentDetailsInstitute"
                app:layout_constraintTop_toBottomOf="@id/tv_studentDetailsInstitute"
                android:drawableStart="@drawable/ic_baseline_call_24"
                android:layout_marginTop="10dp"
                tools:text="Dhaka city college"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_studentDetailsBioLebel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_studentDetailsPhone"
                app:layout_constraintTop_toBottomOf="@id/tv_studentDetailsPhone"
                android:layout_marginTop="10dp"
                android:text="@string/biography"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_copyBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_content_copy_24"
                app:layout_constraintTop_toTopOf="@id/tv_studentDetailsBioLebel"
                app:layout_constraintBottom_toBottomOf="@id/tv_studentDetailsBioLebel"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@null"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_studentDetailsBioValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_studentDetailsBioLebel"
                app:layout_constraintTop_toBottomOf="@id/tv_studentDetailsBioLebel"
                android:layout_marginTop="5dp"
                android:textIsSelectable="true"
                tools:text="bio is coming"/>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>